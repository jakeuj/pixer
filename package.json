{
  "name": "pixer-electron",
  "version": "1.0.1",
  "description": "Pixer E-Ink Photo Frame Controller",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-arm": "electron-builder --mac --arm64",
    "dist": "electron-builder --publish=never",
    "build:python": "pyinstaller --onefile --distpath ./python-dist --name upload upload.py && pyinstaller --onefile --distpath ./python-dist --name firmware_upgrade firmware_upgrade.py",
    "test:windows-fix": "node test-windows-fix.js",
    "test:macos": "node test-macos-compatibility.js",
    "test:cross-platform": "npm run test:windows-fix && npm run test:macos"
  },
  "keywords": [
    "pixer",
    "e-ink",
    "photo-frame",
    "electron"
  ],
  "author": "jakeuj",
  "license": "Unlicense",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {},
  "build": {
    "appId": "com.jakeuj.pixer",
    "productName": "PixerController",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "python-dist/upload*",
      "python-dist/firmware_upgrade*",
      "ble.bin",
      "ite.bin",
      "pixer.bin"
    ],
    "extraResources": [
      {
        "from": "python-dist/",
        "to": "python-dist/",
        "filter": ["upload*", "firmware_upgrade*"]
      },
      {
        "from": "ble.bin",
        "to": "ble.bin"
      },
      {
        "from": "ite.bin",
        "to": "ite.bin"
      },
      {
        "from": "pixer.bin",
        "to": "pixer.bin"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
